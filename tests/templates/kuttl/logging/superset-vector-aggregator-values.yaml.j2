---
role: Aggregator
service:
  ports:
  - name: api
    port: 8686
    protocol: TCP
    targetPort: 8686
  - name: vector
    port: 6123
    protocol: TCP
    targetPort: 6000
customConfig:
  api:
    address: 0.0.0.0:8686
    enabled: true
  sources:
    vector:
      address: 0.0.0.0:6000
      type: vector
      version: "2"
  transforms:
    automaticLogConfigSuperset:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "superset-node-automatic-log-config-0" &&
        .container == "superset"
    automaticLogConfigVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "superset-node-automatic-log-config-0" &&
        .container == "vector"
    customLogConfigSuperset:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "superset-node-custom-log-config-0" &&
        .container == "superset"
    customLogConfigVector:
      type: filter
      inputs: [vector]
      condition: >-
        .pod == "superset-node-custom-log-config-0" &&
        .container == "vector"
    automaticLogConfigInitDb:
      type: filter
      inputs: [vector]
      condition: .container == "superset-init-db"
  sinks:
    out:
      inputs: [automaticLogConfig*, customLogConfig*]
{% if lookup('env', 'VECTOR_AGGREGATOR') %}
      type: vector
      address: {{ lookup('env', 'VECTOR_AGGREGATOR') }}
{% else %}
      type: blackhole
{% endif %}
